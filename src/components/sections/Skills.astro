---
import Section from "../Section.astro"

import { skills } from "@cv"
---
<Section title ="Skills">
    <ul>
        {
            skills.map (({ name }) =>(
                <li>
                    <span>{name}</span>
                </li>
            ))
        }
    </ul>
    
</Section>

<style>
    ul{
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    li {
        border-radius: 5px;
        background: #999;
        color: #000;
        font-size: 1rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>