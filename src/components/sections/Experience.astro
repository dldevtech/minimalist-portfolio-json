---
import Section from "../Section.astro";

import { work } from "@cv";
---

<Section title="Experiencie">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights }) => {
          const start = new Date(startDate).toLocaleString("es-ES", {
            month: "short",
            year: "numeric",
          });
          const end =
            endDate != null ? new Date(endDate).toLocaleString("es-ES",{
                month: "short",
                year: "numeric",
            })
             : "Actual";
          const years = `${start} - ${end}`;
          return (
            <li>
              <article>
                <header>
                    <div>
                  <h3>{name}</h3>
                  <h4>{position}</h4>
                    </div>

                    <time>{years}</time>

                </header>
                <footer></footer>
              </article>
              <p>{summary}</p>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>

    ul{
        display: flex;
        flex-direction: column;
        gap: 15px;
    }
    article h3{
        font-weight: 500;
        color:#111;
    }

    article h4 {
        font-weight: 400;
        color: #222;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time{
        font-size: 0.85rem;
        color: #555;
    }
</style>